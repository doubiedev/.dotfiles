bindsym $mod+p mode "$mode_xrandr"
set $mode_xrandr Set monitors: (r)eset, (2)dual-monitors-hdmi, (3)single-ext-monitor
mode "$mode_xrandr" {
    bindsym r exec --no-startup-id "xrandr --output eDP-1 --auto --output HDMI-2 --off", mode "default"
    bindsym 2 exec --no-startup-id "xrandr --output eDP-1 --auto --pos 0x0 --output HDMI-2 --auto --right-of eDP-1", mode "default"
    bindsym 3 exec --no-startup-id "xrandr --output eDP-1 --off --output HDMI-2 --auto", mode "default"

    # exit mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

